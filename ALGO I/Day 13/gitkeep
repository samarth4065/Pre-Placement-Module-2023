BIT MANIPULATION

class Solution {
public:
    bool isPowerOfTwo(int n) {
         if(n==1){
            return true;
        }
        else if(n==0){
            return false;
        }
        else if(n%2!=0){
            return false;
        }
        return isPowerOfTwo(n/2);
    }
};

NUMBER OF ONE BITS

class Solution {
  // you need to treat n as an unsigned value
  public int hammingWeight(int n) {
    return Integer.bitCount(n);
  }
}
